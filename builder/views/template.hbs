<html>
    <div id='container'>
        <div id='page'>
            <div id='header'>
                <div class='flex-x' style='align-items: stretch;'>
                    <div style='padding: 4px;'>
                        <div class='flex-y'>
                            <div class='flex-x' style="align-items: baseline;">
                                <p>Form</p>
                                <h1 style='padding: 4px;'>{{{id}}}</h1>
                            </div>
                            <div class='flex-x' style='align-items: end; flex-grow: 1; margin-top: 30px;'>
                                <div>
                                    <p>DiceGang LLC</p>
                                    <p>Meme Division</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id='mid_header'>
                        <h2>{{{title}}}</h2>
                        <p style='font-weight: bold;'>{{{subtitle}}}</p>
                        <br/>
                        {{#each notes}}
                            <p style='font-weight: bold;'>▶ {{this}}</p>
                        {{/each}}
                    </div>
                    <div>
                        <div class='flex-y'>
                            <div style='border-bottom: 1px solid;'>
                                <p class='tc' style='padding: 2px;'>Dice No. 1337</p>
                            </div>
                            <h1 class='tc' style='padding: 5px;'><span class='outlined'>20</span>22</h1>
                            <div class='flex-x' style='padding: 3px;'>
                                <div>
                                    <p>Attachment</p>
                                    <p>Sequence No.</p>
                                </div>
                                <div>
                                    <h2>42</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{#each sections}}

                <div class='part'>
                    <div class='flex-x' style='align-items: center;'>
                        <div style='width: 15%; text-align: center;'>
                            <div class='inverted'>
                                <h3>{{{this.num}}}</h3>
                            </div>
                        </div>
                        <div style='width: 5%;'></div>
                        <div>
                            <h3>{{{this.title}}}</h3>
                        </div>
                    </div>
                </div>

                {{#ifeq this.type "general"}}
                    <div class='flex-x'>
                        <div style='display:flex; align-items:center; border-right: 1px solid black; border-top: 1px solid black; border-bottom: 1px solid black; text-align: center; padding: 10px;'>
                            <div>
                                <h3>Type <br/> or <br/> Print</h3>
                            </div>
                        </div>
                        <div style='flex-grow:1; border-top: 1px solid black;'>
                            <div class='flex-y'>
                                {{#each this.fields}}
                                    {{#ifeq this.type "text"}}
                                        <div style='font-size: 9pt; padding: 8px; border-bottom: 1px solid black;'>
                                            <span style='font-weight: bold;'>{{this.num}} {{this.name}} </span>
                                            <span>({{this.info}})</span>
                                            <br/>
                                            <input type='text' class='fillable' style='margin-top:10px; height: 37px; width: 100%; text-align: left; padding-left: 10px;'/>
                                        </div>
                                    {{/ifeq}}
                                    {{#ifeq this.type "flag"}}
                                        <div style='font-size: 9pt; padding: 8px; border-bottom: 1px solid black;'>
                                            <span style='font-weight: bold;'>{{this.num}} {{this.name}} </span>
                                            <span>({{this.info}})</span>
                                            <br/>
                                            <table class='flag-table'>
                                                <tr>
                                                    <td class='hcell' style='width: 100px;'><div>a</div></td>
                                                    <td class='hcell'><div>b</div></td>
                                                    <td class='hcell' style='width: 100px;'><div>c</div></td>
                                                </tr>
                                                <tr>
                                                    <td class='mcell' style='background-color: #ddd; -webkit-print-color-adjust: exact;'>dice{</td>
                                                    <td class='mcell' style='padding: 0px;'>
                                                        <input type='text' class='fillable' style='width: 100%; height: 37px;'/>
                                                    </td>
                                                    <td class='mcell' style='background-color: #ddd; -webkit-print-color-adjust: exact;'>}</td>
                                                </tr>
                                            </table>
                                        </div>
                                    {{/ifeq}}
                                {{/each}}
                            </div>
                        </div>
                    </div>
                {{/ifeq}}
                {{#ifeq this.type "steps"}}
                    {{#each this.steps}}
                        <div class='entries'>
                            <table style='border-spacing: 0; border-collapse: collapse;'>
                                <thead>
                                    <tr>
                                        <th colspan="3" style='border-top: 1px solid black; border-bottom: 1px solid black; padding-top: 8px; padding-bottom: 8px;'>
                                            <h3 style='text-align: left; padding-left: 10px;'>{{{this.num}}} {{{this.title}}}</h3>
                                        </th>
                                        <th style='border: 1px solid black; width: 100px;'>
                                            <h4>Column A</h4>
                                        </th>
                                    </tr>
                                </thead>

                                {{#each this.lines}}
                                    {{#ifeq this.type "op"}}
                                        <tr style='height:30px;'>
                                            <td class='c1'>{{{this.num}}}</td>
                                            <td class='c2'>{{{this.msg}}}</td>
                                            <td class='c3' style='border: 1px solid black'>{{{this.num}}}</td>
                                            <td class='c4' style='border: 1px solid black;'>
                                                <input type='text' class='c4_inp fillable'/>
                                            </td>
                                        </tr>
                                    {{/ifeq}}
                                    {{#ifeq this.type "val"}}
                                        <tr style='height:30px;'>
                                            <td class='c1'>{{{this.num}}}</td>
                                            <td class='c2'>(do not modify)</td>
                                            <td class='c3' style='border: 1px solid black'>{{{this.num}}}</td>
                                            <td class='c4' style='border: 1px solid black; text-align: center; background-color: #ddd; -webkit-print-color-adjust: exact;'>{{{this.val}}}</td>
                                        </tr>
                                    {{/ifeq}}
                                    {{#ifeq this.type "choice"}}
                                        <tr style='height:30px;'>
                                            <td class='c1'>{{{this.num}}}</td>
                                            <td class='c2'>{{{this.msg}}}</td>
                                            <td class='c3'></td>
                                            <td class='c4'></td>
                                        </tr>
                                        <tr style='height:30px;'>
                                            <td class='c1'></td>
                                            <td class='c2'>
                                                <div style='padding-left: 20px;'>
                                                    {{!-- <div>▢ <b>Yes</b> {{{this.yes}}}</div>
                                                    <div>▢ <b>No</b> {{{this.no}}}</div> --}}
                                                    <div>
                                                        <input type='checkbox' id='check_y_{{{this.num}}}'/>
                                                        <label for='check_y_{{{this.num}}}'><b>Yes</b> {{{this.yes}}}</label>
                                                    </div>
                                                    <div>
                                                        <input type='checkbox' id='check_n_{{{this.num}}}'/>
                                                        <label for='check_n_{{{this.num}}}'><b>No</b> {{{this.no}}}</label>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class='c3'></td>
                                            <td class='c4'></td>
                                        </tr>
                                    {{/ifeq}}
                                {{/each}}
                            </table>
                        </div>
                    {{/each}}
                {{/ifeq}}
                {{#ifeq this.type "certification"}}
                    <div class='cert'>
                        <p>Under penalty of perjury, I certify that:</p>
                        <ol>
                            <li>The flag provided on this form is complete and correct in its entirety.</li>
                            <li>I am a registered CTF player in accordance with DiceGang LLC terms of service.</li>
                            <li>My team name does not describe the quality of a primary or secondary color.*</li>
                            <li>Neither my team nor I have been publicly shamed on Twitter for flag hoarding.</li>
                        </ol>
                        <p>* for example: “absolute red”, “super green”, “nice yellow”</p>
                        <div class='flex-x' style='border-top: 1px solid black; border-bottom: 2px solid black; align-items: end; margin-top: 10px;'>
                            <div style='padding: 10px;'><h3>Sign <br/> Here</div>
                            <div style='flex-grow: 1; border-left: 1px solid black; border-right: 1px solid black; padding: 10px;'>
                                <p>Signature of <br> CTF player ▶</p>
                            </div>
                            <div style='flex-grow: 1; padding: 10px;'>
                                <p>Date ▶</p>
                            </div>
                        </div>
                    </div>
                {{/ifeq}}
            {{/each}}
        </div>
    </div>
</html>
